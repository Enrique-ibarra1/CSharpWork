<h1>Dojo Surver Results: </h1>
@if(@ViewBag.Name[0] == 'A')
{
    <p>Name: <span style="color: red;">@ViewBag.Name</span></p>
}
else
{
    <p>Name: @ViewBag.Name </p>
}

<p>Location: @ViewBag.Location</p>
<p>Favorite Language: @ViewBag.Language</p>
@if(ViewBag.Comments != null)
{
    <h1>Comments:</h1>
    <p>@ViewBag.Comments</p>
    
}
else
{
    <p>@ViewBag.Name has nothing to say.</p>
}