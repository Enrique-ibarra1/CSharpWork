@model Association

<h1>@ViewBag.Product.Name</h1>
<div class="">
    <h3>Categories: </h3>
    @foreach (var c in ViewBag.OnProd)
    {
        <p>@c.Category.Name</p>
    }
</div>
<div class="">
    <h3>Add Category</h3>
    <form asp-action="CategoryToProd" asp-controller="Home" asp-route-prodId="@ViewBag.Product.ProductId">
        <select asp-for="CategoryId">
            @foreach (var c in ViewBag.NotOnProd)
            {
                <option value="@c.CategoryId">@c.Name</option>
            }
        </select>
        <button type="submit" class="btn btn-dark">Add to Product</button>
    </form>
</div>