@{
    ViewData["Title"] = "Home Page";
}
@model Product

<div class="row justify-content-around">
        <h1>New Product</h1>
        <form class="col-5" asp-action="AddProduct" asp-controller="Home" method="POST">
            <div class="form-group">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name">Product Name</label>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description">Product Description</label>
                <textarea asp-for="Description" class="form-control" overflow="scroll"></textarea>
            </div>
            <div class="form-group">
                <span asp-validation-for="Price"></span>
                <label asp-for="Price">Product Price</label>
                <input type="number" asp-for="Price" class="form-control">
            </div>
            <button type="submit" class="btn btn-danger">Add Product</button>
        </form>
    

    <div class="col">
        <h3>Existing Products</h3></br>
        <ul>
        @foreach (var p in ViewBag.Products)
        {
            <a asp-action="ProductPage" asp-controller="Home" asp-route-productId="@p.ProductId">
                <li>@p.Name</li></a>
        }
        </ul>
    </div>
</div>


