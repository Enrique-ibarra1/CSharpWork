@model Association

<h1>@ViewBag.Category.Name</h1>
<div class="">
    <h1>Products: </h1>
    <ul>
    @foreach (var p in ViewBag.Products)
        {
            <li>@p.Product.Name</li>
        }
    </ul>
</div>
<div class="">
    <h3>Add Product</h3>
    <form asp-action="ProdToCategory" asp-controller="Home" 
        asp-route-categoryId="@ViewBag.Category.CategoryId">
        <select asp-for="ProductId">
            @foreach (var p in ViewBag.NotOnCat)
            {
                <option value="@p.ProductId">@p.Name</option>
            }
        </select>
        <button type="submit" class="btn btn-dark">Add to Category</button>
    </form>
</div>